{
    "name": "mhannan-dev/sparktro-laravel-modular",
    "description": "A modular system for Laravel apps",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Muhammad Hannan",
            "email": "mdhannan.info@gmail.com",
            "homepage": "https://github.com/mhannan-dev/sparktro-laravel-modular",
            "role": "Developer"
        }
    ],
    "keywords": ["laravel", "modular", "modules", "package", "laravel-package"],
    "autoload": {
        "psr-4": {
            "Sparktro\\LaravelModular\\": "src/"
